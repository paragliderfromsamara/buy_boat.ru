<p id="notice"><%= notice %></p>

<h1>Типы лодок</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Series</th>
      <th>Body type</th>
      <th>Description</th>
      <th>Base cost</th>
      <th>Min hp</th>
      <th>Max hp</th>
      <th>Hull width</th>
      <th>Hull length</th>
      <th>Is deprecated</th>
      <th>Manufacturer</th>
      <th>Creator</th>
      <th>Modifier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boat_types.each do |boat_type| %>
      <tr>
        <td><%= boat_type.name %></td>
        <td><%= boat_type.boat_series.name if !boat_type.boat_series.nil? %></td>
        <td><%= boat_type.body_type %></td>
        <td><%= boat_type.description %></td>
        <td><%= boat_type.base_cost %></td>
        <td><%= boat_type.min_hp %></td>
        <td><%= boat_type.max_hp %></td>
        <td><%= boat_type.hull_width %></td>
        <td><%= boat_type.hull_length %></td>
        <td><%= boat_type.is_deprecated %></td>
        <td><%= link_to boat_type.trademark.name, boat_type.trademark %></td>
        <td><%= boat_type.creator.email %></td>
        <td><%= boat_type.modifier.email %></td>
        <td><%= link_to 'Show', boat_type %></td>
        <td><%= link_to 'Edit', edit_boat_type_path(boat_type) %></td>
        <td><%= link_to 'Destroy', boat_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

