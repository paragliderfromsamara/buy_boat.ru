<div class = "tb-pad-s">
        <table>
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Описание
                    </th>
                    <th>
                        Вид спереди
                    </th>
                    <th>
                        Вид сзади
                    </th>
                    <th>
                        Вид сверху
                    </th>
                    <th>
                        Рассадка
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                <% modifications.each do |mdf| %>
                    <tr>
                        <td>
                            <%= mdf.ru_name %>
                        </td>
                        <td>
                            <%= mdf.ru_description %>
                        </td>
                        <td>
                            <%= image_tag mdf.aft_view.small if !mdf.aft_view.nil? %>
                        </td>
                        <td>
                            <%= image_tag mdf.bow_view.small if !mdf.bow_view.nil? %>
                        </td>
                        <td>
                            <%= image_tag mdf.top_view.small if !mdf.top_view.nil? %>
                        </td>
                        <td>
                            <% mdf.accomodation_views.each do |view| %>
                                <%= image_tag view[:small] %>
                            <%end%>
                        </td>
                        <td>
                            <%= link_to "<i class = 'fi-pencil'></i> Редактировать".html_safe, edit_boat_type_modification_path(mdf) %>
                        </td>
                    </tr>
                <%end%>
            </tbody>
            
        </table>
    </div>


