<%= form_for(@shop_product, html: {remote: true}) do |f| %>
    <%= f.hidden_field :shop_id, value: @shop.id %>
    <div class = "row">
        <div class = "small-12 medium-8 columns tb-pad-xs">
            <%= f.label :name, @product_type.name %>
            <%= f.collection_select :product_id, @product_type.products.order("name ASC"), :id, :full_name %>
        </div>
        <div class = "small-12 medium-4 columns tb-pad-xs">
            <%= f.label :amount, "Цена, руб." %>
            <%= f.number_field :amount, placeholder: "Цена в рублях" %>
        </div>
    </div>
    <div class = "row">
        <div class = "small-12 columns tb-pad-xs">
            <%= f.submit "Добавить", class: "button success expanded" %>
        </div>
    </div>
<%end%>